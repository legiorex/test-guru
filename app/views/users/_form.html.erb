<%= form_with model: @user, local: true do | form |  %>
    <%= render 'shared/errors', resource: @user %>

    <p>
        <%= form.label :first_name %>
        <%= form.text_field :first_name, id: :user_first_name %><br>
    </p>
    <p>
        <%= form.label :last_name %>
        <%= form.text_field :last_name, id: :user_last_name %><br>
    </p>
    <p>
        <%= form.label :email %>
        <%= form.text_field :email, id: :user_email %><br>
    </p>

    <p>
        <%= form.label :password %>
        <%= form.password_field :password, id: :user_password %><br>
    </p>

    <p>
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, id: :user_password_confirmation %><br>
    </p>

    <p><%= form.submit %> </p>

<% end %>
