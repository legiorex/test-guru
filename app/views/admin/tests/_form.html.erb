<%= form_with model: [:admin, @test], local: true do |form| %>

    <%= render '/shared/errors', resource: @test %>

    <p>
        <%= form.label :title, 'Введите название теста'%><br>
        <%= form.text_field :title%>
    </p><br>

    <p>
        <%= form.label :level, 'Введите уровень сложности теста'%><br>
        <%= form.number_field :level%>
    </p><br>

    <p>
        <%= form.label :category_id, 'Выберите категорию теста'%><br>
        <%= form.collection_select :category_id, Category.all, :id, :title, promt: true%>
    </p><br>

    <p>
        <%= form.label :author_id, 'Выберите автора теста'%><br>
        <%= form.collection_select :author_id, User.all, :id, :full_name, promt: true%>
    </p><br>

    <%= form.submit 'Сохранить'%>
<%end%>
